@model AnitaSMS.Models.Entity.Courses

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-primary shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">Course Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Course Name</dt>
                        <dd class="col-sm-8">@Model.CourseName</dd>

                        <dt class="col-sm-4">Course Description</dt>
                        <dd class="col-sm-8">@Model.CourseDescription</dd>

                        <dt class="col-sm-4">Active</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Course")" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
