@model IEnumerable<AnitaSMS.Models.Entity.Courses>


<h1 class="text-center">Course Management</h1>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col">
            @if (User.IsInRole("ADMIN"))
            {
                <a class="btn btn-danger float-end mb-3" asp-action="AddEdit">Add New</a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>S.N.</th>
                        <th>Course Name</th>
                        <th>Course Description</th>
                        <th>Action</th>
                    </tr>
                </thead>

                @{
                    int count = 1;
                }
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@course.CourseName</td>
                            <td>@course.CourseDescription</td>
                            <td>
                                <a class="btn btn-secondary btn-sm" asp-action="Detail" asp-route-id="@course.Id">Detail</a>
                                @if (User.IsInRole("ADMIN"))
                                {
                                    <a class="btn btn-primary btn-sm" asp-action="AddEdit" asp-route-id="@course.Id">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                                }
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
