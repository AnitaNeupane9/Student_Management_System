@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center my-5 landing-page">
    <h1 class="display-4">Welcome to the Student Management System</h1>
    <p class="lead">Your all-in-one solution for managing student information efficiently and effectively.</p>
    <hr class="my-4">
    <p>Streamline your student management process with ease and accuracy.</p>
    <a class="btn btn-primary btn-lg" href="/Student/Index" role="button">Get Started</a>
</div>

<style>
    body {
        background-color: #f8f9fa;
        position: relative;
    }

    .landing-page {
        position: relative;
        z-index: 2;
    }

    .text-center {
        color: #343a40;
        max-width: 600px;
        margin: 0 auto;
        padding: 50px 20px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    .background-icons {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="%23D6EAF8" opacity="0.4"><circle cx="10" cy="10" r="10"/><circle cx="90" cy="10" r="10"/><circle cx="50" cy="50" r="10"/><circle cx="10" cy="90" r="10"/><circle cx="90" cy="90" r="10"/></svg>');
        background-size: 150px 150px;
        z-index: 1;
    }
</style>

<div class="background-icons"></div>
