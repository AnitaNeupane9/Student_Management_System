@using AnitaSMS.web.Models
﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnitaSMS</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnitaSMS.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>

    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 56px; 
        }

        .main-content {
            display: flex;
            flex: 1;
        }

        .sidebar {
            height: calc(100vh - 56px); 
            width: 250px;
            position: fixed;
            top: 56px; 
            left: 0;
            background-color: #ADD8E6;
            padding-top: 10px;
            overflow-y: auto;
            transition: width 0.3s;
            z-index: 1000; 
        }

            .sidebar.hidden {
                width: 0;
                overflow: hidden;
            }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: white;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #4682B4;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex: 1;
            transition: margin-left 0.3s;
        }

            .content.expanded {
                margin-left: 50px; 
            }

        .navbar {
            position: fixed;
            top: 0;
            height: 65px;
            width: 100%;
            z-index: 1001; /* Higher than the sidebar's z-index */
        }


        .sidebar .dropdown-menu {
            position: static;
            float: none;
            width: auto;
            margin-top: 0;
            border: none;
            border-radius: 0;
            box-shadow: none;
            transition: none;
            background-color: #A0E8CD;
            color: black;
        }

        #sidebarToggle {

            border: none;
            background: none;
            padding: 0;
            margin: 0;
            color: inherit;
            font-size: inherit;
            cursor: pointer;
            box-shadow: none;
        }

            #sidebarToggle:focus {
                outline: none !important; 
            }



        .sidebar .dropdown-menu a {
            padding: 10px 20px; 
        }

            .sidebar .dropdown-menu a:hover {
                background-color: #D4F2EE;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <button id="sidebarToggle" class="btn text-white"><i class="fas fa-bars"></i></button>
                <a class="navbar-brand mx-2" asp-area="" asp-controller="Dashboard" asp-action="Index">Student Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">

                </div>
            </div>
            <partial name="_LoginPartial"></partial>
        </nav>

    </header>

    <div class="main-content">
        <div class="sidebar">
            <ul class="navbar-nav">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="Index">Course</a>
                    </li>
                }
            </ul>
        </div>

        <div class="content">
            <main role="main" class="pb-3">
                <partial name="Notification"></partial>
                @RenderBody()
            </main>
        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script>
            document.getElementById('sidebarToggle').addEventListener('click', function () {
                document.querySelector('.sidebar').classList.toggle('hidden');
                document.querySelector('.content').classList.toggle('expanded');
            });
        </script>
        @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
